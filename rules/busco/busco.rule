        mode="transcriptome",
        lineage_path="/squid/databases/busco2db/metazoa_odb9",
        #lineage_path= join(DATABASES_DIR, lineage)
        # optional parameters
        extra="" 
    wrapper:
        "0.26.1/bio/busco"

