rule run_busco:
    input:
       join(ASSEMBLY_DIR, base + ".fasta") 
    output:
        join(BUSCO_DIR, 'busco', 'run_busco_' + base, "full_table_txome_busco.tsv")
    log:
       join(LOGS_DIR, 'busco', base + '_index.log') 
